#include<bits/stdc++.h>
using namespace std;
int main()
{
    int i,j,n,arr[100][100];
    cin>>n;
    for(i=0;i<n;i++)
    {
        for(j=0;j<n;j++)
        {
            if((j==0 || j==(n-1))||(i==0 || i==(n-1)))
            {
                cout<<"*";
            }
            else{cout<<" ";}
            
            
        }cout<<endl;
    }
    }
